{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  // https://laurieontech.com/posts/eslint/
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": "false",
        "optionalDependencies": "false",
        "peerDependencies": "false"
      }
    ]
  }
}
